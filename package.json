{
  "name": "reelpod-studio",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "bash -c 'set -a; source backend/.env; set +a; (cd backend && uv run uvicorn main:app --reload --host 127.0.0.1 --port 8000) & backend_pid=$!; bash start-acestep.sh & acestep_pid=$!; trap \"kill $backend_pid $acestep_pid 2>/dev/null\" EXIT; vite'",
    "dev:acestep": "bash -c 'set -a; source backend/.env; set +a; bash start-acestep.sh'",
    "dev:frontend": "vite",
    "dev:backend": "bash -c 'cd backend && uv run uvicorn main:app --reload --host 127.0.0.1 --port 8000'",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix && prettier --write .",
    "format": "prettier --write .",
    "test": "vitest run"
  },
  "dependencies": {
    "@quinteroac/agents-coding-toolkit": "^0.2.0",
    "@react-three/drei": "^10.7.7",
    "@react-three/fiber": "^9.5.0",
    "@react-three/postprocessing": "^3.0.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "three": "^0.183.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@types/react": "^19.0.7",
    "@types/react-dom": "^19.0.3",
    "@types/three": "^0.183.1",
    "@typescript-eslint/eslint-plugin": "^8.56.1",
    "@typescript-eslint/parser": "^8.56.1",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "10.4.27",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "jsdom": "^25.0.1",
    "postcss": "8.5.6",
    "prettier": "^3.8.1",
    "tailwindcss": "3.4.17",
    "typescript": "^5.6.3",
    "vite": "^6.0.1",
    "vitest": "^2.1.8"
  }
}
